	<!-- Apache DBCP connection pool -->
	<bean id="dataSource"  class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName"  value="${DOLLAR}{jdbc.driverClassName}" />
		<property name="url"              value="${DOLLAR}{jdbc.url}" />
		<property name="username"         value="${DOLLAR}{jdbc.username}" />
		<property name="password"         value="${DOLLAR}{jdbc.password}" />
	</bean>

	<!-- The properties file containing the values for the JDBC datasource-->	
	<context:property-placeholder location="jdbc.properties"/>
	
